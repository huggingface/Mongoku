{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist/",
    "strictNullChecks": true,
    "lib": ["es6", "es2016", "es2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true // Needed for debugging with VSCode
  },
  "exclude": ["app/**/*"]
}
